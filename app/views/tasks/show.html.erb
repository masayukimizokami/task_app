<div class="main_container">
  <div class="information">
    <h2>スケジュール詳細</h2>
  </div>

  <table>
    <tr>
      <th>名前</th>
      <td><%= @schedule.title %></td>
    </tr> 
    <tr>
      <th>開始日</th>
      <td><%= l @schedule.start_day, format: :short %></td>
    </tr> 
    <tr>
      <th>投稿日時</th>
      <td><%= l @schedule.updated_at, format: :short %></td>
    </tr> 
    <tr>
      <th>終日</th>
      <td>
        <% if @schedule.all_day == true %>
        ○
        <% else @schedule.all_day == false %>
        <% end %>
      </td>
    </tr> 
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @schedule.memo %></td>
    </tr> 
  </table>

  <div>
    <ul>
      <li><%= link_to "スケジュール一覧に戻る" ,:tasks %></li>
      <li><%= link_to "スケジュールを編集する" ,[:edit, @schedule] %></li>
      <li><%= link_to "スケジュールを削除", @schedule, method: :delete, data: {confirm: "本当に削除しますか？"} %></li>
    </ul>
  </div>
</div>